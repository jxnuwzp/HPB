    <form role="form" method="post">
    <%if(task){%>
        <input type="hidden" name="_id" id="_id" value=<%=task._id%> />
     <%}%>

    <div class="form-group">
        <label for="shopname">商店名字:</label>

        <%if(task){%>
        <input type="text" required="" class="form-control" name="shopname" id="shopname" value=<%=task.shopname%> placeholder="商店名字"/>
        <%} else{%>
                <input type="text" required="" class="form-control" name="shopname" id="shopname" placeholder="商店名字"/>
        <%}%>
    </div>
    <div class="form-group">
        <label for="urlpath">URL路径(例如：http://www.baidu.com):</label>
         <%if(task){%>
        <input type="text" required="" class="form-control" name="urlpath"  id="urlpath" value=<%=task.urlpath%> placeholder="请输入URL路径(例如：http://www.baidu.com)"/>
     <%} else{%>
             <input type="text" required="" class="form-control" name="urlpath"  id="urlpath" placeholder="请输入URL路径(例如：http://www.baidu.com)"/>
<%}%>
    </div>
    <div class="form-group">
        <label for="completetime">完成时间:</label>
         <%if(task){%>
        <input type="text" required="" readonly="readonly" class="form-control" name="completetime" id="completetime" value=<%=task.completetime%> placeholder="完成时间"/>
    <%} else{%>
            <input type="text" required="" readonly="readonly" class="form-control" name="completetime" id="completetime" placeholder="完成时间"/>
<%}%>
    </div>
  

<div class="form-group">
    <label for="inputfile">文件输入:</label>
    <input type="file" name="file"  id="inputfile" />
    <p class="help-block">help comment...</p>
  </div>
<div class="form-group">
    <label for="inputfile">Comment:</label>
     <%if(task){%>
    <textarea  id="comment" name="comment" rows="4" cols="50" placeholder="please insert commnet here for this upload!"><%=task.comment%></textarea>
   <%} else{%>
      <textarea  id="comment" name="comment" rows="4" cols="50" placeholder="please insert commnet here for this upload!"></textarea>
<%}%>
  </div>
