
<%- include ../shared/header %>

    <!--================-->
    <div class="main">
    <%- include left %>

  <script>
        $(function () {
            $('.datepicker').datepicker({
           startDate: '-3d'
});
$.datepicker.formatDate( "yyyy-mm-dd", new Date() );

        </script>
 
  <div class=" monitor" style="padding:15px; width:500px;float:left;">
  
    <form role="form" method="post" action="create" enctype="multipart/form-data">  
           
    <div class="form-group">
        <label for="shopname">商店名字:</label>  <br/>      

        <select class="ui compact selection dropdown" name="shopname"> 
       <option value=""></option>
       <% shops.forEach(function (shop, index) { %>
       <option value="<%= shop.shopname%>"><%= shop.shopname%></option>
       <% }) %>
       </select>

 
    </div>

    <div class="form-group">
        <label for="urlpath">URL路径(例如：http://www.baidu.com):</label> <br/> 
   
        <input type="text" required="" name="urlpath"  id="urlpath" placeholder="请输入URL路径(例如：http://www.baidu.com)"/>
  </div>
    <div class="form-group">
        <label for="completetime">完成时间:</label>  <br/>   
        <input type="text" required="" data-date-format="yyyy-mm-dd" class="datepicker" name="completetime" id="completetime" placeholder="完成时间"/>
    </div>
  

<div class="form-group">
    <label for="inputfile">文件输入:</label>
    <input type="file" name="fileimg"  id="inputfile" />
    <p class="help-block">help comment...</p>
    <image src="../uploads/images.png" />
  </div>
<div class="form-group">
    <label for="inputfile">说明:</label>   
      <textarea  id="comment" name="comment" rows="4" cols="50" placeholder="说明"></textarea>

  </div>
    <button type="submit" class="btn btn-default">提交</button>
    </form>        
        </div>
    </div>

<%- include ../shared/footer %>